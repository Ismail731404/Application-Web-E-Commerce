{% extends 'base.html.twig' %}

{% block title  'Nouveau compte Employer' %}
{% block stylesheets %}{% endblock %}

{% block fils %}
	<div class="card text-small mx-auto mb-auto mt-auto">
		<div class="card-body">
			<div class="card-header">
				<h3 class="h3 mb-3 font-weight-normal card-title">
					Cree un nouveau compte
				</h3>
			</div>
			{{ form_start(registrationForm,{'attr':{'id' : 'form_registeur'}}) }}


			{{ form_row(registrationForm.foo.FisrtName)}}

			{{ form_row(registrationForm.foo.LastName)}}


			{{ form_row(registrationForm.foo.indicateur)}}

			{{ form_row(registrationForm.foo.phone)}}

			{{ form_row(registrationForm.foo.email)}}

			{{ form_row(registrationForm.foo.password)}}
			<small id="passwordHelpBlock" class="form-text text-muted">
				Votre mot de passe doit comporter au moins 8 caract√®res, contenir au moins un chiffres, une lettre en masjucule et minuscule, et ne doit contenir que les symbole [-_.] .
			</small>
			{{ form_row(registrationForm.foo.confirmepassword)}}

			{{ form_row(registrationForm.Departement)}}

			{{ form_row(registrationForm.Bureau)}}

			{{ form_row(registrationForm.Fonction)}}

			{{ form_row(registrationForm.NumeroBureau)}}

			<button type="submit" class="btn btn-primary card-link">Envoyer</button><br/>
			{{ form_end(registrationForm,{'attr':{'id' : 'form_registeur'}}) }}
			<br>
			<a href="{{path('app_login')}}" class="btn btn-secondary card-link">Annuler</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.0.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/additional-methods.min.js"></script>
	<script src="{{ asset('js/registerEmployer-valide.js') }}"></script>
{% endblock %}
