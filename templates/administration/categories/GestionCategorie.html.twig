{% extends 'base.html.twig' %}
{% block title 'Gere les Categories' %}
 {% block stylesheets %} 
 {% endblock %}
{% block  fils %}

<div class="container-fluid mt-5">
    
   
              
    <div class="row">
                
                <div class="col-md-3 mt-md-5 mb-5">
                            
                            {% for message in app.flashes('success') %}
                              <div class="alert alert-success" role="alert">
                                 <strong>{{ message }}</strong>
                               </div>
                            {% endfor %}
                
                            <div class="text-right ">
                                <a  class="btn btn-primary btn-lg btn-block" id="contactButton" {% if  form.vars.submitted %} style="display:none;" {% endif %} > Creer Une Categorie</a>
                            </div>
                            <div id="contactForm" class="mt-4" {% if not form.vars.submitted %} style="display:none;" {% endif %}>

                                            <h2> Cree un nouveau Categorie </h2>
                                                {{ form_start(form) }}
                                                    
                                                    {{ form_row(form.Nom_categorie)}}
                                                
                                                {{ form_widget(form) }}
                                                    
                                                    <button  class="btn btn-primary " > Enregistre </button>
                                                    <a class="btn btn-primary float-right" href="#" id="categorieannule"role="button"> Annule</a>
                                                {{ form_end(form) }}
                                              
                            </div>


                             <div class="text-right mt-4">
                                <a  class="btn btn-warning btn-lg btn-block" id="dechetButton" {% if  form1.vars.submitted %} style="display:none;" {% endif %} > Creer Une dechet</a>
                            </div>

                            <div id="dechetForm" class="mt-4" {% if not form1.vars.submitted %} style="display:none;" {% endif %}>

                                        <h2> Cree un nouveau Dechet </h2>
                                        {{ form_start(form1,{'attr':{'id' : 'form_registeur'}}) }}

                                                <div class="row">
                                                    <div class="col-md-4"> {{ form_row(form1.designation)}}</div>
                                                    <div class="col-md-4"> {{ form_row(form1.prix)}}</div>
                                                    <div class="col-md-4"  style="margin-top:40px;"> {{ form_row(form1.promo)}}</div>
                                                

                                                </div>
                                                <div class="row">
                                                     <div class="col-md-4"> {{ form_row(form1.ville)}}</div>
                                                    <div class="col-md-4"> {{ form_row(form1.quantiteStock)}}</div>
                                                    <div class="col-md-4"> {{ form_row(form1.adresse)}}</div>
                                                   
                                                    
                                                    
                                                </div>

                                                 <div class="row">
                                                   <div class="col-md-6"> {{ form_row(form1.CodePostal)}}</div>
                                                    
                                                    <div class="col-md-6 "> {{ form_row(form1.categorie,{'label': false ,'attr':{'hidden' : 'true'}})}}</div>
                                                </div>

                                                
                                                <div class="row">
                                                    <div class="col-md-4"> {{ form_row(form1.imageFile)}}</div>
                                                    <div class="col-md-4 "> {{ form_row(form1.origine)}}</div>
                                                    <div class="col-md-4 "> {{ form_row(form1.nature)}}</div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12"> {{ form_row(form1.description)}}</div>
                                                </div>
                                                    <button  class="btn btn-warning"> Ajouter </button>
                                                    <a class="btn btn-warning float-right" href="#" id="dechetannule" role="button"> Annule</a>
                                                {{ form_end(form1,{'attr':{'id' : 'form_registeur'}}) }}
                                               
                                </div>

                                 
                                <div class="text-right mt-4">
                                        <a  class="btn btn-secondary btn-lg btn-block" id="publiciteButton" {% if  form3.vars.submitted %} style="display:none;" {% endif %} > Ajoute Une Publicite </a>
                                 </div>
                                    <div id="publiciteForm" class="mt-4" {% if not form3.vars.submitted %} style="display:none;" {% endif %}>

                                                    <h2> Cree un nouveau Categorie </h2>
                                                        {{ form_start(form3) }}
                                                            
                                                        
                                                        {{ form_widget(form3) }}
                                                            
                                                            <button  class="btn btn-secondary " > Enregistre </button>
                                                            <a class="btn btn-secondary float-right" href="#" id="publiciteannule"role="button"> Annule</a>
                                                        {{ form_end(form3) }}
                                                    
                                </div>
                </div>

                    <div class="col-md-9 mb-5">
            
                                <h2 class="text-center">Gere Les Categories Des Dechets</h2>
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nom Categorie</th>
                                            <th>Action</th>
                                            
                                        </tr>
                                    </thead>
                                    <div class="accordion" id="accordionExample">
                                    <tbody>
                                    
                                    {% for categorie in categories %}
                                        <tr>
                                            <td scope="row">{{ categorie.Nomcategorie }}</td>
                                            <td>
                                            

                                           
                                            <div  id="heading{{categorie.id}}" style="display:inline;">
                                            <button class="btn btn-primary collapsed" type="button" data-toggle="collapse" data-target="#collapse{{categorie.id}}" aria-expanded="false" aria-controls="collapse{{categorie.id}}">
                                                Editer
                                            </button>
                                             </div>
                                        

                                            <form method="post" action="{{path('administration_categories_delete',{id: categorie.id })}}" style="display:inline-block"  onsubmit="return confirm('Etes-vous vraiment sur ?')" >
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete'~ categorie.id)}}">
                                            <button class="btn btn-danger">Supprime</button>
                                            </form>
                                            <a  class="btn btn-secondary" href="{{path('administration_categorie_dechets',{id: categorie.id })}}" role="button">Affiche Les dechets</a>
                                            </td>
                                           
                                        </tr>
                                         

                                                
                                            <td colspan="2">
                                             <div id="collapse{{categorie.id}}" class="collapse" aria-labelledby="heading{{categorie.id}}" data-parent="#accordionExample">
                                                    <form method="post" action="{{path('administration_categories_editer',{id: categorie.id })}}" id="form_prenom">

                                                        <input type="hidden" name="_method" value="edite">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('edite'~ categorie.id)}}">

                                                        <div class="form-group">
                                                            <label for="lastname">Nouveau Nom Categories </label><br/>
                                                            <input type="text" name="fisrtname" value="{{categorie.NomCategorie}}" class="form-control">
                                                        </div>
                                                        <div class="form-group">
                                                            <button class="btn btn-primary">Enregistre les modification</button>
                                                            <button class="btn btn-primary collapsed" type="button" data-toggle="collapse" data-target="#collapse{{categorie.id}}" aria-expanded="false" aria-controls="collapse{{categorie.id}}">
                                                                     Annuler
                                                             </button>
                                                        </div>
                                                    </form>
                                             </div>
                                            </td>
                                                
                                        </tr> 
                                        
                                        {% endfor %}
                                      
                                        
                                    </tbody>
                                     </div>
                                </table>

                    </div>







{% endblock %}

